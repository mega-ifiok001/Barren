              class="offcanvas offcanvas-start"
              tabindex="-1"
              id="offcanvasNavbar"
              aria-labelledby="offcanvasNavbarLabel"
            >
              <div class="offcanvas-header">
                <div class="offcanvas-logo" id="offcanvasNavbarLabel">
                  <img src="/images/logo-icon.svg" alt="" />
                </div>
