	<script>
      // Load events on page load
      window.addEventListener("DOMContentLoaded", () => {
        loadEvents();
      });

      async function loadEvents() {
        fetch("/api/events")
          .then((response) => response.json())
          .then((data) => {
            console.log(data);
            if (data.success) {
              const eventsContainer =
                document.getElementById("events-container");
              eventsContainer.innerHTML = ""; // Clear existing content

              const categoryMap = {
                Arts: "arts",
                Business: "business",
                Concert: "concert",
                Workshops: "workshops",
                "Coaching and Consulting": "coaching_consulting",
                "Health and Wellbeing": "health_Wellness",
                Volunteer: "volunteer",
                Sports: "sports",
                Free: "free",
                "Food and Drink": "food_drink",
                "Visual Arts": "arts",
                Others: "others",
              };

              data.events.forEach((event) => {
                const date = new Date(event.eventDate);
                const day = date.getDate();
                const month = date.toLocaleString("default", {
                  month: "short",
                });
                const dayName = date.toLocaleString("default", {
                  weekday: "short",
                });

                const categoryClass = categoryMap[event.category] || "";
                const price =
                  event.tickets && event.tickets.length > 0
                    ? `₦${event.tickets[0].ticketPrice}`
                    : "Free";
                const banner =
                  event.eventBanner || "images/event-imgs/img-1.jpg";

                const eventCard = `
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mix ${categoryClass}" data-ref="mixitup-target">
                      <div class="main-card mt-4">
                        <div class="event-thumbnail">
                          <a href="/event/${event._id}" class="thumbnail-img">
                            <img src="${banner}" alt="" />
                          </a>
                          <span class="bookmark-icon" title="Bookmark"></span>
                        </div>
                        <div class="event-content">
                          <a href="/event/${event._id}" class="event-title">${event.eventName}</a>
                          <div class="duration-price-remaining">
                            <span class="duration-price">${price}*</span>
                            <span class="remaining"></span>
                          </div>
                        </div>
                        <div class="event-footer">
                          <div class="event-timing">
                            <div class="publish-date">
                              <span><i class="fa-solid fa-calendar-day me-2"></i>${day} ${month}</span>
                              <span class="dot"><i class="fa-solid fa-circle"></i></span>
                              <span>${dayName}, ${event.eventTime}</span>
                            </div>
                            <span class="publish-time"><i class="fa-solid fa-clock me-2"></i>${event.eventDuration}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                `;
                eventsContainer.insertAdjacentHTML("beforeend", eventCard);
              });
            }
          })
          .catch((error) => {
            console.error("Error loading events:", error);
          });
      }
    </script>
	
