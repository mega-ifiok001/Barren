    <!-- Body Start-->
    <div class="wrapper">
      <div class="breadcrumb-block">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 col-md-10">
              <div class="barren-breadcrumb">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Ticket Details
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="event-dt-block p-80">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8 col-md-12">
              <% if (valid) { %>
              <div class="main-card">
                <div class="event-thumbnail">
                  <img
                    src="<%= event.eventBanner %>"
                    alt=""
                    class="img-fluid rounded-top"
                    style="width: 100%; height: 300px; object-fit: cover"
                  />
                </div>
                <div class="event-content p-4">
                  <div class="text-center mb-4">
                    <h2 class="event-title mb-3"><%= event.eventName %></h2>
                    <span class="badge bg-success fs-5 px-4 py-2"
                      >Valid Ticket</span
                    >
                  </div>

                  <div class="row g-4">
                    <div class="col-md-6">
                      <div class="p-3 border rounded h-100">
                        <h5 class="mb-3 text-primary">
                          <i class="fa-solid fa-calendar-days me-2"></i>Event
                          Details
                        </h5>
                        <p class="mb-2">
                          <strong>Date:</strong> <%= event.eventDate %>
                        </p>
                        <p class="mb-2">
                          <strong>Time:</strong> <%= event.eventTime %> (<%=
                          event.eventDuration %>)
                        </p>
                        <p class="mb-0">
                          <strong>Venue:</strong> <%= event.venue %>
                        </p>
                        <p class="mb-0 text-muted small">
                          <%= event.addressLine1 %>, <%= event.city %>, <%=
                          event.state %>
                        </p>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="p-3 border rounded h-100">
                        <h5 class="mb-3 text-primary">
                          <i class="fa-solid fa-ticket me-2"></i>Ticket Info
                        </h5>
                        <p class="mb-2">
                          <strong>Type:</strong> <%=
                          event.tickets[0].variationName %>
                        </p>
                        <p class="mb-2">
                          <strong>Price:</strong> ₦<%=
                          event.tickets[0].ticketPrice %>
                        </p>
                        <p class="mb-2">
                          <strong>Order ID:</strong> #<%=
                          ticket.transactionId.substring(ticket.transactionId.length
                          - 8).toUpperCase() %>
                        </p>
                        <p class="mb-0">
                          <strong>Attendee:</strong> <%= user.firstName %> <%=
                          user.lastName %>
                        </p>
                      </div>
                    </div>
                  </div>

                  <div class="text-center mt-5">
                    <div class="qr-code-placeholder mb-2">
                      <!-- QR Code could go here if needed -->
                      <i class="fa-solid fa-qrcode fa-4x text-dark"></i>
                    </div>
                    <p class="text-muted small">Ticket ID: <%= ticket._id %></p>
                  </div>
                </div>
              </div>
              <% } else { %>
              <div class="main-card text-center p-5">
                <div class="mb-4">
                  <i class="fa-solid fa-circle-xmark fa-5x text-danger"></i>
                </div>
                <h2 class="text-danger mb-3">Invalid or Used Ticket</h2>
                <p class="lead mb-4">
                  <%= message || "This ticket is not valid for entry." %>
                </p>
                <a href="/" class="main-btn btn-hover">Go to Home</a>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
